*, * > *
	box-sizing border-box

html, body, main
	width 100%
	height 100%
	
	color #0f0f0f
	
html, body
	overflow hidden
	

p
	display block
	
	margin-bottom 8px
	
	line-height 1.2

h1, .h1
	font-family inherit
	font-size 40px
	font-weight 700
	line-height 1

h2, .h2
	font-family inherit
	font-size 24px
	font-weight 700
	line-height 1
	
a
	color inherit
	
	text-decoration none
	
	line-height 1